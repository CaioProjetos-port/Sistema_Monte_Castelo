<Page x:Class="Monte_Castelo.PageCliente"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Monte_Castelo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageCliente">

    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" Background="#f8f8fd" Text="Clientes Cadastrados" FontSize="32" FontWeight="Bold" Padding="30,10,0,10"/>

        <!-- Lista de festas -->
        <ListView Grid.Row="1"
                  x:Name="xaml_listaClientes"
                  Loaded="ListaDeClientes_Loaded"
                  Background="#f8f8fd"
                  ItemsSource="{Binding Clientes}"
                  Style="{StaticResource PageAgenda_ListViewDeFestas}">
            
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Cliente" Width="auto" DisplayMemberBinding="{Binding nome}" />
                    <GridViewColumn Header="Celular" Width="auto" DisplayMemberBinding="{Binding celular}" />
                    <GridViewColumn Header="Email" Width="auto" DisplayMemberBinding="{Binding email}" />
                    <GridViewColumn Header="CPF" Width="auto" DisplayMemberBinding="{Binding cpf}" />
                </GridView>
            </ListView.View>
        </ListView>

        <!-- barra de opções -->
        <Expander Grid.Row="2"
              x:Name="xaml_expander_novo_evento"
              Header="Cadastrar Cliente"
              HorizontalAlignment="Stretch"
              IsExpanded="False"
              Background="LightBlue"
              FontSize="20"
              FontWeight="Medium"
              Padding="30,15,30,35">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Linha 1 informações do cliente -->
                <StackPanel Grid.Row="0" Grid.Column="0">                           <!-- Coluna 1 -->
                    <TextBlock Text="CPF" Style="{StaticResource PageAgenda_TextBlockDeNovoEvento}"/>
                    <TextBox x:Name="xaml_cpf_cliente" TextChanged="formatarCpf" PreviewKeyDown="KeyPress" Style="{StaticResource PageAgenda_TextBoxDeNovoEvento}"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1">                           <!-- Coluna 2 -->
                    <TextBlock Text="Nome" Style="{StaticResource PageAgenda_TextBlockDeNovoEvento}"/>
                    <TextBox x:Name="xaml_nome_cliente" Style="{StaticResource PageAgenda_TextBoxDeNovoEvento}"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="2">                           <!-- Coluna 3 -->
                    <TextBlock Text="Sobrenome" Style="{StaticResource PageAgenda_TextBlockDeNovoEvento}"/>
                    <TextBox x:Name="xaml_sobrenome_cliente" Style="{StaticResource PageAgenda_TextBoxDeNovoEvento}"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="3">                           <!-- Coluna 4 -->
                    <TextBlock Text="DDD + Celular" Style="{StaticResource PageAgenda_TextBlockDeNovoEvento}"/>
                    <TextBox x:Name="xaml_celular_cliente" TextChanged="formatarCelular" PreviewKeyDown="KeyPress" Style="{StaticResource PageAgenda_TextBoxDeNovoEvento}"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="4"  Grid.ColumnSpan="2">      <!-- Coluna 4 e 5 -->
                    <TextBlock Text="Email" Style="{StaticResource PageAgenda_TextBlockDeNovoEvento}"/>
                    <TextBox x:Name="xaml_email_cliente" Style="{StaticResource PageAgenda_TextBoxDeNovoEvento}"/>
                </StackPanel>

                <!-- Linha 1 e 2 informações de endereço -->
                <StackPanel Grid.Row="1" Grid.Column="0">                           <!-- Coluna 1 -->
                    <TextBlock Text="CEP" Style="{StaticResource PageAgenda_TextBlockDeNovoEvento}"/>
                    <TextBox x:Name="xaml_cep" TextChanged="formatarCep" Style="{StaticResource PageAgenda_TextBoxDeNovoEvento}"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1">                           <!-- Coluna 2 -->
                    <TextBlock Text="Cidade" Style="{StaticResource PageAgenda_TextBlockDeNovoEvento}"/>
                    <TextBox x:Name="xaml_cidade" Style="{StaticResource PageAgenda_TextBoxDeNovoEvento}"/>
                </StackPanel>
                
                <StackPanel Grid.Row="1" Grid.Column="2">                           <!-- Coluna 3 -->
                    <TextBlock Text="Bairro" Style="{StaticResource PageAgenda_TextBlockDeNovoEvento}"/>
                    <TextBox x:Name="xaml_bairro" Style="{StaticResource PageAgenda_TextBoxDeNovoEvento}"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="3">       <!-- Coluna 4, 5 e 6 -->
                    <TextBlock Text="Logradouro" Style="{StaticResource PageAgenda_TextBlockDeNovoEvento}"/>
                    <TextBox x:Name="xaml_logradouro" Style="{StaticResource PageAgenda_TextBoxDeNovoEvento}"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="0">                           <!-- Coluna 1 -->
                    <TextBlock Text="Numero" Style="{StaticResource PageAgenda_TextBlockDeNovoEvento}"/>
                    <TextBox x:Name="xaml_numero" Style="{StaticResource PageAgenda_TextBoxDeNovoEvento}"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="1"  Grid.ColumnSpan="3">      <!-- Coluna 2, 3 e 4 -->
                    <TextBlock Text="Complemento" Style="{StaticResource PageAgenda_TextBlockDeNovoEvento}"/>
                    <TextBox x:Name="xaml_complemento" Style="{StaticResource PageAgenda_TextBoxDeNovoEvento}"/>
                </StackPanel>

                <!-- Linha 5 botões de ação -->
                <Button Grid.Row="2" Grid.Column="5" Content="Salvar Cliente" Click="salvarCliente" Style="{StaticResource PageAgenda_ButtonDeNovoEvento}"/>
            </Grid>
        </Expander>
    </Grid>
</Page>

    