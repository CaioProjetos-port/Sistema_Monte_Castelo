<Page x:Class="Monte_Castelo.PageAgenda"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Monte_Castelo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAgenda">

    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Agenda de Eventos" FontSize="36" FontWeight="Bold" Margin="30,10,0,20"/>

        <!-- Lista de festas -->
        
        
        <!-- barra de opções -->
        <Expander Grid.Row="2" Header="Novo Evento" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" IsExpanded="False" Background="AliceBlue">
            <StackPanel>
                <TextBlock Text="Item 1" />
                <TextBlock Text="Item 2" />
                <TextBlock Text="Item 3" />
            </StackPanel>
        </Expander>
                    
    </Grid>
</Page>
