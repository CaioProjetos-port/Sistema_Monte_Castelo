<Page x:Class="Monte_Castelo.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Monte_Castelo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid Background="WhiteSmoke">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <StackPanel Grid.Column="0" Background="#fff">
            <TextBlock Text="Menu" Margin="30,10,0,20" HorizontalAlignment="Left" FontSize="25"/>
            <Button x:Name="btn_menu_1" Content="Agenda de Eventos" Click="btn1Pressed" Style="{StaticResource BotadoDeMenuLateral}"/>
            <Button x:Name="btn_menu_2" Content="Clientes" Click="btn2Pressed" Style="{StaticResource BotadoDeMenuLateral}"/>
            <Button x:Name="btn_menu_3" Content="Funcionários" Click="btn3Pressed" Style="{StaticResource BotadoDeMenuLateral}"/>
            <Button x:Name="btn_menu_4" Content="Pagamentos" Click="btn4Pressed" Style="{StaticResource BotadoDeMenuLateral}"/>
        </StackPanel>

        <Frame x:Name="PageFrame" Grid.Column="1"/>
    </Grid>
</Page>
